<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/question_fragment_q_margin_l"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vote_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="@dimen/choose_fragment_item_margin_t_b"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/choose_fragment_item_content_line_space"
        android:lineSpacingMultiplier="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/choose_fragment_item_content_text_size"
        tools:text="aasdsdasdasdsad" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yanxiu.gphone.faceshow.customview.VoteProgressView
            android:id="@+id/voteResult_progress_bg"
            android:layout_width="@dimen/vote_result_width"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:background="@drawable/progressbar_bg"
            android:gravity="center_vertical" />

        <com.yanxiu.gphone.faceshow.customview.VoteProgressView
            android:id="@+id/voteResult_progress"
            android:layout_width="@dimen/vote_result_width"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:background="@drawable/progressbar"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/voteResult_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/voteResult_progress_bg"
            android:gravity="center_vertical"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/choose_fragment_item_content_text_size"
            tools:text="10" />

    </RelativeLayout>


</LinearLayout>
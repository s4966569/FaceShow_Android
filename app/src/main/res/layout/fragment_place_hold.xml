<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EBEFF2"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center_horizontal"
        android:background="@drawable/im_fragment_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/im_title_bar_layout"
            layout="@layout/common_title_layout"/>

        <ImageView

            android:layout_marginTop="55dp"
            android:src="@drawable/im_fragment_placeholder"
            android:layout_width="190dp"
            android:layout_height="190dp" />


        <TextView

            android:textSize="29sp"
            android:textColor="@color/color_1da1f2"
            android:text="敬请期待..."
            android:layout_marginTop="36dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            android:layout_marginTop="18dp"
            android:lineSpacingExtra="9dp"
            android:gravity="center"
            android:text="想和班级里的其他同学一起交流讨论？\n面授结束了额还想继续研究互相学习？\n聊聊模块即将上线！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>

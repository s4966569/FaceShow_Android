<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.yanxiu.gphone.faceshow.notification.NotificationDetailActivity">

    <include layout="@layout/check_in_title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_EBEFF2" />

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_333333"
        android:textSize="16dp"
        tools:text="报道／用餐及地点" />

    <TextView
        android:id="@+id/tv_notification_created_person_and_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/notificationCreatedPersonAndTime"
        android:textColor="@color/color_999999"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/color_333333"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/img_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp" />
</LinearLayout>

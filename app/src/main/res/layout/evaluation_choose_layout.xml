<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/vote_common_title_layout" />

    <TextView
        android:id="@+id/evaluation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/course_marginleft"
        android:layout_marginRight="@dimen/course_marginleft"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:text="课程目录"
        android:textColor="@color/color_333333"
        android:textSize="16dp"
        android:textStyle="bold" />

    <com.yanxiu.gphone.faceshow.customview.ChooseLayout
        android:id="@+id/chooseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.yanxiu.gphone.faceshow.customview.ChooseLayout>

    <include
        android:id="@+id/evalution_choose_layout_line"
        layout="@layout/line" />
</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/title_layout_left_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/commontitle_margin_left"
        android:background="@drawable/loading_img"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_layout_height"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:gravity="center"
        android:text="title"
        android:textColor="#333333"
        android:textSize="@dimen/commontitle_title_textsize" />

    <ImageView
        android:id="@+id/title_layout_right_img"
        android:layout_width="@dimen/commontitle_title_rightIcon_width"
        android:layout_height="@dimen/commontitle_title_rightIcon_width"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/commontitle_margin_left"
        android:background="@drawable/loading_img"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_layout_signIn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_layout_height"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@id/title_layout_right_img"
        android:gravity="center"
        android:text="@string/signIn"
        android:textColor="#1da1f2"
        android:textSize="@dimen/commontitle_singin_textsize"
        android:visibility="gone" />

</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/course_detail_item_layout"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/selector_course_adapter_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/course_detail_item_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/course_adapter_marginleft"
            android:background="@color/color_1da1f2" />

        <TextView
            android:id="@+id/course_detail_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/course_adapter_marginleft"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="2017年9月15日15:37:41"
            android:textColor="@color/color_333333"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/course_adapter_marginleft"
        android:background="@color/color_EBEFF2" />
</LinearLayout>

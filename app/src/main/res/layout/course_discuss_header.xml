<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <ImageView
            android:id="@+id/discuss_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/course_discuss_question" />

        <TextView
            android:id="@+id/discuss_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="手动阀打算的手动阀打算的手动阀打算的手动阀打算的手动阀打算的"
            android:textColor="@color/color_333333"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/discuss_feedback_count"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="回复(56)"
        android:textColor="@color/color_666666"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/color_d7dde0" />
</LinearLayout>

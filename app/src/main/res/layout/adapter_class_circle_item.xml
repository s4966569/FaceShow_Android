<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#ff0000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.yanxiu.gphone.faceshow.customview.UnMoveGridView
            android:id="@+id/gv_imgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:stretchMode="columnWidth" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:id="@+id/ll_anim"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="#0000ff"
                android:layout_toLeftOf="@+id/iv_function"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:text="点赞"/>
                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:text="评论"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_function"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="#00ff00"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.yanxiu.gphone.faceshow.customview.ClassCircleThumbView
                android:id="@+id/cc_thumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.yanxiu.gphone.faceshow.customview.ClassCircleCommentLayout
                android:id="@+id/cc_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_EBEFF2"
    tools:context="com.yanxiu.gphone.faceshow.user.FeedBackActivity">

    <include layout="@layout/common_title_layout" />

    <EditText
        android:id="@+id/edt_feedback"
        android:textCursorDrawable="@drawable/edittext_cursor_drawable"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_white_rounded_rectangle"
        android:gravity="start|top"
        android:hint="@string/input_feedback"
        android:lineSpacingExtra="3dp"
        android:maxLength="200"
        android:padding="15dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="14sp" />
</LinearLayout>

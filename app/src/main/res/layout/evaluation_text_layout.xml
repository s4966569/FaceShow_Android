<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/evaluation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/course_marginleft"
        android:layout_marginRight="@dimen/course_marginleft"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:text="课程目录"
        android:textColor="@color/color_333333"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/evalution_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="@dimen/course_marginleft"
        android:layout_marginRight="@dimen/course_marginleft"
        android:background="@drawable/shape_evaluation"
        android:hint="最多输入250个评价文字"
        android:gravity="top"
        android:maxLength="250"
        android:minHeight="180dp"
        android:padding="10dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="16dp"
        tools:text="hahahahhaahhaa" />

    <include layout="@layout/line" />
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeff2"
    android:orientation="vertical">

    <com.test.yanxiu.im_ui.ImTitleLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.test.yanxiu.im_ui.view.ImRecyclerView
        android:id="@+id/chartroom_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_white" />

    <RelativeLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fafafa"
        android:minHeight="52dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_send_btn"
            android:enabled="false"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/color_white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/ed_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_send"
            android:background="@drawable/shape_class_circle_edittext"
            android:hint="评论"
            android:maxLength="200"
            android:maxLines="3"
            android:minHeight="35dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp" />
    </RelativeLayout>
</LinearLayout>
